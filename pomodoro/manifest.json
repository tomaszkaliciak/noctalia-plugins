{
    "id": "pomodoro",
    "name": "Pomodoro",
    "version": "1.2.0",
    "author": "User",
    "description": "Discrete Pomodoro Timer",
    "entryPoints": {
        "main": "Main.qml",
        "barWidget": "BarWidget.qml"
    },
    "settings": {
        "workTime": { "type": "number", "default": 25, "label": "Work (min)", "min": 1, "max": 60 },
