        "longBreakTime": { "type": "number", "default": 15, "label": "Long Break (min)", "min": 1, "max": 60 },
        "sessionsTarget": { "type": "number", "default": 4, "label": "Sessions per Round", "min": 1, "max": 10 }
    }
}
